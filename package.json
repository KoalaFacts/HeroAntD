{
  "name": "hero-antd",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --filter '@hero-antd/docs' dev",
    "dev:all": "bun --filter '*' dev",
    "dev:core": "bun --filter '@hero-antd/core' dev",
    "dev:tokens": "bun --filter '@hero-antd/tokens' dev",
    "dev:icons": "bun --filter '@hero-antd/icons' dev",
    "dev:docs": "bun --filter '@hero-antd/docs' dev",
    "build": "biome check . && bun run build:tokens && bun run build:icons && bun run build:core",
    "build:tokens": "bun --filter '@hero-antd/tokens' build",
    "build:icons": "bun --filter '@hero-antd/icons' build",
    "build:core": "bun --filter '@hero-antd/core' build",
    "build:docs": "bun --filter '@hero-antd/docs' build",
    "build:all": "bun run build && bun run build:docs",
    "generate:icons": "bun --filter '@hero-antd/icons' generate:icons",
    "test": "bun --filter '*' test",
    "scaffold": "bun --filter '@hero-antd/core' scaffold",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "^1.3.5",
    "typescript": "^5.9.3"
  }
}
